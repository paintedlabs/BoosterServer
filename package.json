{
  "name": "booster-server",
  "version": "1.0.0",
  "description": "Professional MTG Booster Pack Simulator Server",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "start": "NODE_OPTIONS='--max-old-space-size=12288' node dist/server.js",
    "dev": "NODE_OPTIONS='--max-old-space-size=12288' ts-node src/server.ts",
    "build": "npm run clean && tsc",
    "build:dev": "npm run clean:dev && tsc -p tsconfig.dev.json",
    "test": "jest",
    "test:tcgcsv": "node test-tcgcsv.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist logs cache",
    "clean:dev": "rm -rf dist-dev logs cache",
    "clean:all": "rm -rf dist dist-dev logs cache node_modules package-lock.json",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.6.9",
    "sharp": "^0.33.5",
    "stream-json": "^1.7.5",
    "unzipper": "^0.12.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "mtg",
    "magic",
    "booster",
    "simulator",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT"
}
